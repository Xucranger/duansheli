<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.shoplist.mapper.ShoplistMapper">
    
    <resultMap type="Shoplist" id="ShoplistResult">
        <result property="id"    column="id"    />
        <result property="category"    column="category"    />
        <result property="shopname"    column="shopname"    />
        <result property="miaoshu"    column="miaoshu"    />
        <result property="picture"    column="picture"    />
        <result property="kucun"    column="kucun"    />
        <result property="price"    column="price"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectShoplistVo">
        select id, category, shopname, miaoshu, picture, kucun, price, create_time from shoplist
    </sql>

    <select id="selectShoplistList" parameterType="Shoplist" resultMap="ShoplistResult">
        <include refid="selectShoplistVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="shopname != null  and shopname != ''"> and shopname like concat('%', #{shopname}, '%')</if>
            <if test="miaoshu != null  and miaoshu != ''"> and miaoshu = #{miaoshu}</if>
            <if test="picture != null  and picture != ''"> and picture = #{picture}</if>
            <if test="kucun != null  and kucun != ''"> and kucun = #{kucun}</if>
            <if test="price != null  and price != ''"> and price = #{price}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
        </where>
    </select>
    
    <select id="selectShoplistById" parameterType="Long" resultMap="ShoplistResult">
        <include refid="selectShoplistVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertShoplist" parameterType="Shoplist" useGeneratedKeys="true" keyProperty="id">
        insert into shoplist
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="category != null">category,</if>
            <if test="shopname != null">shopname,</if>
            <if test="miaoshu != null">miaoshu,</if>
            <if test="picture != null">picture,</if>
            <if test="kucun != null">kucun,</if>
            <if test="price != null">price,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="category != null">#{category},</if>
            <if test="shopname != null">#{shopname},</if>
            <if test="miaoshu != null">#{miaoshu},</if>
            <if test="picture != null">#{picture},</if>
            <if test="kucun != null">#{kucun},</if>
            <if test="price != null">#{price},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateShoplist" parameterType="Shoplist">
        update shoplist
        <trim prefix="SET" suffixOverrides=",">
            <if test="category != null">category = #{category},</if>
            <if test="shopname != null">shopname = #{shopname},</if>
            <if test="miaoshu != null">miaoshu = #{miaoshu},</if>
            <if test="picture != null">picture = #{picture},</if>
            <if test="kucun != null">kucun = #{kucun},</if>
            <if test="price != null">price = #{price},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteShoplistById" parameterType="Long">
        delete from shoplist where id = #{id}
    </delete>

    <delete id="deleteShoplistByIds" parameterType="String">
        delete from shoplist where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>